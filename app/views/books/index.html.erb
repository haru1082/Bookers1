<h1>新規投稿</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
  
  <h4>感想</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
  
<% end %> 


<h1>投稿一覧</h1>

<% @books.each do |book| %>
<body>
 <table>
　<tr>
　  <th>Title</th>
　  <th><%= book.title %></th>
　</tr>
  <tr>
    <th>Body</th>
    <th><p><%= book.body %></p></th>
  </tr>
  <tr>
    <th><%= link_to "Show", book_path(book.id) %></th>
    <th><%= link_to "Edit", edit_book_path(book.id) %></th>
    <th><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
  </tr>
 </table>
</body>

<% end %>