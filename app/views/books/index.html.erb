<h1>新規投稿</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
  
  <h4>感想</h4>
  <%= f.text_area :body %>
  
  <%= f.submit '投稿' %>
  
<% end %> 



<h1>投稿一覧</h1>

<% @books.each do |book| %>
　<p><%= book.title %></p>
  <p>感想</p>
  <span>
    <%= link_to book.body, book_path(book.id) %>
  </span>

<% end %>