 <head>
  <style type ="text/css"></style>
  <link rel ="stylesheet" media="all" href="application.css" date-turbolinks-track="recoad">
  <meta name="viewport" content="width=device-width,initial-scale=1">
 </head>

 <body>
  <p id="notice"></p>
  <h1>Books</h1>

  <table>
   <thead>
    <tr>
　   <th class = "th-title">Title</th>
     <th class = "th-body">Body</th>
    </tr>
   </thead>
  </table>
  <% @books.each do |book| %>
  <table>
   <tbody>
    <tr>
     <td>
      <span class = book-title><%= book.title %></span>
     </td>
     <td>
      <span class = book-body><%= book.body %></span>
     </td>
     <td>
      <a class= "show" href= "<%= book_path(book) %>">Show</a>
     </td>
     <td>
      <a class= "edit" href= "<%= edit_book_path(book) %>">Edit</a>
     </td>
     <td>
      <a dataa-confirm ="Are you sure?" class = "destroy" rel = "nofollow" data-method ="delete" href="<%= book_path(book) %>">Destroy</a>
     </td>
    </tr>
   </tbody>
  </table>
  <% end %>
</body>

<h1>New Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book' %></p>

<% end %>